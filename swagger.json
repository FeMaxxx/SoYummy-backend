          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email",
            "example": "jack@gmail.com"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "maxLength": 64,
            "description": "User's password",
            "example": "pwd1234567"
          }
        },
        "required": ["name", "email", "password"]
      },
